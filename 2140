		double a;
		double b;
		a = num1 + num2;
		b = denom1 * num2;
		cout << "Fraction: \n";
		cout << a << endl;
		cout << b << endl;
		cout <<  n / d;
	}
	
	void subtraction() {
		double a;
		double b;
		a = num1 - num2;
		b = denom1 * num2;
		cout << "Fraction: \n";
		cout << a << endl;
		cout << b << endl;
		cout << n / d;
	}
	
